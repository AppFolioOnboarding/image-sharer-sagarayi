<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="col-12">
  <h1>The Gram</h1>
  <p>This is the home page for the image sharing app called 'The Gram'</p>
  <%= link_to("Save Image",{controller: :save_image, action: :new}, class: " save-img-btn btn btn-success") %>
  <%= link_to("Show all images",{action: :index}, class: "show-all-img-btn btn btn-primary float-right") %>
</div>
<br/>

<div class="container">
  <div class="row mt-5 justify-content-center">
    <% @images.reverse.each do |image| %>
      <div class="card card-img-<%= image.id%> card-custom mx-5 mb-2">
        <a href="<%=image.url%>">
          <img src="<%=image.url%>" alt="" class="card-img">
        </a>
        <%= link_to '', {:controller => "home", :action => "destroy", :img_id => image.id },
                    method: :post, class: 'delete-btn btn-group-sm btn-danger col-1 float-right fa fa-trash'%>
        <div class="row col-10">
          <% image.tags.each do |tag| %>
            <a href="<%=home_filter_url%>?selected_tag=<%=tag%>"><span class="badge badge-info"><%=tag %> </span></a><br/>
          <%end%>
        </div>
      </div>
    <%end%>
  </div>
</div>
<div id="feedback-root"></div>
